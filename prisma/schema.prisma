generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // یا "postgresql" یا "mysql" بسته به نوع دیتابیس
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteType {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  features    String
  packageType String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  images SiteImage[]
}

model SiteImage {
  id          Int      @id @default(autoincrement())
  url         String
  sourceUrl   String
  description String?
  siteTypeId  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  siteType SiteType @relation(fields: [siteTypeId], references: [id], onDelete: Restrict, onUpdate: Cascade)
}

